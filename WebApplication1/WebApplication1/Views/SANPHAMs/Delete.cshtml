        </dt>

        <dd>
            @Html.DisplayFor(model => model.TENSP)
        </dd>

        <hr />

        <dt>
            Thương hiệu:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.THUONGHIEU)
