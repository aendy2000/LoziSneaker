@model WebApplication1.Models.SANPHAM

@{
    ViewBag.Title = "Delete";
}

<h2>Xóa sản phẩm</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã sản phẩm:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MASP)
        </dd>

        <hr />

        <dt>
            Tên sản phẩm:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TENSP)
        </dd>

        <hr />

        <dt>
            Thương hiệu:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.THUONGHIEU)
        </dd>

        <hr />

        <dt>
            Giá:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GIA)
        </dd>

        <hr />

        <dt>
            Số lượng:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CHITIETSP.SL_TONG)
        </dd>

        <hr />

        <dt>
            Màu sắc:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MAUSAC)
        </dd>

        <hr />

        <dt>
            Mô tả:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MOTA)
        </dd>

        <hr />

        <dt>
            Ngày thêm:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NGAYTHEM)
        </dd>

        <hr />

        <dd>
            <img src="@Url.Content(Model.HINHANH + " ")" style="height: 350px; width: auto; margin: 10px;" />
            <br>
        </dd>
        <hr />

        <dd>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
            <div class="form-actions no-color">
                <a href="@Url.Action("Index")" style="background-color:cornflowerblue" class="btn btn-outline-light">
                    <i class="fas fa-arrow-left"></i> Trở lại danh sách
                </a>
                &emsp; <a style="color:lightgray;">|</a> &emsp;
                <input type="submit" value="Xóa Sản Phẩm" style="background-color:cornflowerblue" class="btn btn-outline-light" />
            </div>
            }
        </dd>
    </dl>
 
    <br>
</div>
