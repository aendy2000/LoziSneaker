@model IEnumerable<WebApplication1.Models.SANPHAM>

@{
    ViewBag.Title = "Index";
}

<h2>Quản lí sản phẩm</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Thương hiệu
        </th>
        <th>
            Giá
        </th>
        <th>
            Màu sắc
        </th>
        <th>
            Ngày thêm
        </th>
        <th>
            Mô tả
        </th>
        <th>
            Số lượng | Size
        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.TENSP)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.THUONGHIEU)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.GIA)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MAUSAC)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NGAYTHEM)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MOTA)
    </td>
    <td>
        @Html.ActionLink("| Cập nhật số lượng |", "Details", new { Controller = "CHITIETSPs", id = item.MASP })
    </td>
    <td>
        @Html.ActionLink("Sửa", "Edit", new { id = item.MASP }) |
        @Html.ActionLink("Chi tiết", "Details", new { id = item.MASP }) |
        @Html.ActionLink("Xóa", "Delete", new { id = item.MASP })
    </td>
</tr>
}

</table>
