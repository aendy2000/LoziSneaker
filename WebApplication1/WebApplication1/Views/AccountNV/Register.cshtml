@using WebApplication1.Models
@{
    ViewBag.Title = "Register";

}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "AccountNV", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
<div class="form-group">
    <div class="col-md-6">
        @Html.Label("Email", new { @class = "col-md-3 control-label" })
        @Html.TextBox("Email", "", new { @class = " form-control" })
    </div>
    <div class="col-md-6">
        @Html.Label("User Name", new { @class = "col-md-3 control-label" })
        @Html.TextBox("UserName", "", new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    <div class="col-md-6">
        @Html.Label("Password", new { @class = "col-md-3 control-label" })
        @Html.Password("Password", "", new { @class = "form-control" })
    </div>
    <div class="col-md-6">
        @Html.Label("PhoneNumber", new { @class = "col-md-3 control-label" })
        @Html.TextBox("PhoneNumber", "", new { @class = "form-control" })
    </div>
</div>
    <div class="form-group">
        <div class="col-md-6">
        @Html.Label("ConfirmPassword", new { @class = "col-md-3 control-label" })
            @Html.Password("ConfirmPassword", "", new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset col-md-3">
            <input type="submit" class="btn btn-default" value="Register" />
            <a href="@Url.Action("Index", "AspNetUsers")">Back to list</a>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
