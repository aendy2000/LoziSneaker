@model WebApplication1.Models.CHITIETDH

@{
    ViewBag.Title = "DeleteDonHangUser";
}

<h2>DeleteDonHangUser</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>CHITIETDH</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tài Khoản khách hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DONHANG.TKKH)
        </dd>

        <dt>
            Tên sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SANPHAM.TENSP)
        </dd>

        <dt>
            Số lượng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SOLUONG)
        </dd>

        <dt>
            Size
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SIZE)
        </dd>

        <dt>
            Thành tiền
        </dt>

        @for (int i = 0; i < 1; i++)
        {
            double total = Convert.ToDouble(Model.GIA.Value * Model.SOLUONG.Value);
            <dd>@total</dd>
        }


    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <a href="@Url.Action("Index", new { id = Model.MADH })" style="background-color:cornflowerblue" class="btn btn-outline-light">
                <i class="fas fa-arrow-left"></i> Trở lại danh sách
            </a> |
            <input type="submit" value="Delete" style="background-color:cornflowerblue" class="btn btn-outline-light" />
        </div>
    }
    <br />
</div>
