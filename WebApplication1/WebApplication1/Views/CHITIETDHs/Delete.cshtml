@model WebApplication1.Models.CHITIETDH

@{
    ViewBag.Title = "Delete";
}
<link rel='stylesheet' href='https://cdn.rawgit.com/t4t5/sweetalert/v0.2.0/lib/sweet-alert.css'>
<script src='https://cdn.rawgit.com/t4t5/sweetalert/v0.2.0/lib/sweet-alert.min.js'></script>
<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>CHITIETDH</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            Tài Khoản khách hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DONHANG.TKKH)
        </dd>

        <dt>
            Tên sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SANPHAM.TENSP)
        </dd>

        <dt>
            Số lượng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SOLUONG)
        </dd>

        <dt>
            Size
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SIZE)
        </dd>

        <dt>
            Thành tiền
        </dt>

        @for (int i = 0; i < 1; i++)
        {
            double total = Convert.ToDouble(Model.GIA.Value * Model.SOLUONG.Value);
            <dd>@total</dd>
        }


    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
    <br />
</div>
